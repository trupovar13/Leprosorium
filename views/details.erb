<h4>Post details:</h4>
<br />
<p>
	<%= @row['content'] %>
	<br />
	<br />
	Added at <%= @row['created_date'] %>
</p>
<br />
<h4>Comments:</h4>
<p>
	<form action="/details/<%= @row['id'] %>" method="POST">
		<textarea name="content" class="form-control" rows="6" style="width:400px" placeholder="Type comment text here"></textarea>
		<br />
		<button type="submit" class="btn btn-success">Add comment</button>
	</form>
</p>
